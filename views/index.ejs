<!DOCTYPE html>
<html>

  <head>
    <title>Linky</title>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">

    <!-- jQuery for Bootstrap-->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" 
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous">
    </script>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap.css"> 
    <script src="/js/bootstrap.min.js"></script>

    <!-- CSS -->
    <link href="/stylesheets/style.css" rel="stylesheet">

    <!-- Angular stuff -->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    
    <!-- Controllers -->
    <script src="/javascripts/controllers/home_controller.js"></script>
    <script src="/javascripts/controllers/posts_controller.js"></script>
    <script src="/javascripts/controllers/user_controller.js"></script>
    <script src="/javascripts/controllers/nav_controller.js"></script>
    <script src="/javascripts/controllers/scroll_controller.js"></script>

    <!-- Services -->
    <script src="/javascripts/services/posts_factory.js"></script>
    <script src="/javascripts/services/votes_factory.js"></script>
    <script src="/javascripts/services/userinfo_factory.js"></script>
    <script src="/javascripts/services/scroll_factory.js"></script>

    <!-- Directives -->
    <script src="/javascripts/directives/sorter_directive.js"></script>

    <!-- Loading glyphicons -->
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
    <style> .glyphicon-thumbs-down { cursor:pointer } </style>
    <style> .glyphicon-arrow-left { cursor:pointer }</style>
    <style> .glyphicon-chevron-up { cursor:pointer }</style>
  </head>




  <body class="linkyBackground" ng-app="LinkApp">
        

    <nav class="navbar navbar-default" ng-controller="NavController">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#linkynav" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#/home"><span class="glyphicon glyphicon-home"></span>  Linky</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="linkynav">   
          <ul class="nav navbar-nav navbar-right linksize">
            <li><a href="#/about">About</a></li>
            <li ng-show="isLoggedIn()"><a href="">{{ currentUser() }}</a></li>
            <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
            <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>                                    
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class = "container contentArea">     
        <ui-view></ui-view>
    </div>

    <span ng-controller="ScrollController">
        <button  id="back-to-top" class="btn btn-primary btn-lg back-to-top" ng-click="goToTop()" role="button" >
          <span  class="glyphicon glyphicon-chevron-up"></span>
        </button>
    </span>          

  </body>
</html>