<html>

  <head>
    <title>Linky</title>

    <!-- Bootstrap -->
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">


    <!-- Angular stuff -->
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>


    <script src="/javascripts/angularApp.js"></script>

    <!-- Controllers -->
    <script src="/javascripts/controllers/main_controller.js"></script>
    <script src="/javascripts/controllers/posts_controller.js"></script>
    <script src="/javascripts/controllers/auth_controller.js"></script>
    <script src="/javascripts/controllers/nav_controller.js"></script>

    <!-- Services -->
    <script src="/javascripts/services/posts_factory.js"></script>
    <script src="/javascripts/services/auth_factory.js"></script>

    
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
  </head>




  <body ng-app="LinkApp" ng-controller="MainController">

    <nav class="navbar navbar-default pull-right" ng-controller="NavController">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </nav>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <ui-view></ui-view>
      </div>
    </div>


  </body>

</html>